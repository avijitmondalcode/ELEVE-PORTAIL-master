<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:id="@+id/main_blog_post"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvSubjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject Name"
                android:textSize="20sp" />



            <TextView
                android:id="@+id/tvSubjectCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="23dp"
                android:text="Course"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvSubjectDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="23dp"
                android:text="Department"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvSubjectSession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="23dp"
                android:text="Session"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvSubjectSemester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="23dp"
                android:text="Semester"
                android:textSize="15sp" />

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Edit Subject"
                android:textColor="#ffffff"
                android:background="#3F51B5"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btnEditSubject"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_delete_24"
                android:id="@+id/ivSubjectDelete"
                />



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>