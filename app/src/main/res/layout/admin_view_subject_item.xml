<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/main_blog_post"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#00000000"
        app:cardCornerRadius="29dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cardbg6"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvAdminViewSubjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/averia_gruesa_libre"
                android:text="Subject Name"
                android:textColor="#000000"
                android:textSize="20sp" />

           <TextView
                 android:id="@+id/tvAdminViewSubjectSemester"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
               android:layout_marginTop="23dp"
                 android:fontFamily="@font/mo_me"
                 android:text="Semester"
                 android:textColor="#F88C8A8A"
                 android:textSize="11sp"
                 android:textStyle="bold"
                android:layout_below="@+id/tvAdminViewSubjectCourse"
               android:layout_toRightOf="@+id/tvAdminViewSubjectDepartment"

                 />

            <TextView
                android:id="@+id/tvAdminViewSubjectCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/mo_me"
                android:text="Course"
                android:textColor="#F88C8A8A"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_below="@+id/tvAdminViewSubjectName"
                />

            <TextView
                android:id="@+id/tvAdminViewSubjectDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/mo_me"
                android:text="Department"
                android:textColor="#F88C8A8A"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_below="@+id/tvAdminViewSubjectCourse"
                />


            <Button
                android:id="@+id/btnEditSubject"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAdminViewSubjectDepartment"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_background_blue"
                android:shadowColor="@color/black"
                android:text="Edit Subject"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/ivAdminViewSubjectDelete"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginLeft="106dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@id/btnEditSubject"
                android:layout_below="@+id/tvAdminViewSubjectDepartment"
                android:src="@drawable/ic_baseline_delete_24" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>