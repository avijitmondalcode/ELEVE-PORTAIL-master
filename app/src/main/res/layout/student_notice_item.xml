<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="490dp"
    android:orientation="vertical"
    android:padding="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/main_blog_post"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#00000000"
        app:cardCornerRadius="29dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:background="@drawable/cardbg6"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvStudentPdfName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/averia_gruesa_libre"
                android:text="Notice Name"
                android:textColor="#000000"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/tvStudentCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="133dp"
                android:fontFamily="@font/mo_me"
                android:text="Course"
                android:textColor="#F88C8A8A"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvStudentDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="203dp"
                android:fontFamily="@font/mo_me"
                android:text="Department"
                android:textColor="#F88C8A8A"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnStudentViewNotice"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_background_blue"
                android:shadowColor="@color/black"
                android:text="View notice"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/ivStudentNoticeDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@id/btnStudentViewNotice"
                android:src="@drawable/ic_baseline_delete_24" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
