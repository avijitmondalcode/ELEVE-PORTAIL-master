<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="faculty.FacultyFinalAttendance"
    android:background="@color/lightWhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="#192157"
            >

            <TextView
                android:layout_width="250dp"
                android:layout_height="180dp"
                android:layout_alignParentLeft="true"

                android:fontFamily="@font/averia_gruesa_libre"
                android:padding="25dp"
                android:text="Attendance\n    Details "
                android:textColor="#DADBDC"
                android:textSize="35sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/teacher"
                android:layout_marginLeft="20dp"
                android:layout_alignParentRight="true"
                />


        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            app:cardBackgroundColor="#00000000"
            android:layout_margin="20dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="50dp"
            android:padding="30dp"
            android:id="@+id/cardFacultyTakeAttendance"            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"

                android:background="@drawable/button_2">

                <ImageView

                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/attendance" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/mo_li"
                    android:padding="10dp"
                    android:text="Take Attendance "
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            app:cardBackgroundColor="#00000000"
            android:layout_margin="20dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="50dp"
            android:id="@+id/cardFacultyViewAttendance"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/round_bg">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/result" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/mo_li"
                    android:padding="10dp"
                    android:text="View Attendance "
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>