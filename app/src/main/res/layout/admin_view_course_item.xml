<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/main_blog_post"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#00000000"
        app:cardCornerRadius="29dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cardbg6"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvAdminViewCourseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/averia_gruesa_libre"
                android:text="Course Name"
                android:textColor="#000000"
                android:textSize="30sp" />

            <!-- <TextView
                 android:id="@+id/tvPdfLink"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="26dp"
                 android:layout_marginTop="63dp"
                 android:fontFamily="@font/mo_me"
                 android:text="Link here"
                 android:textColor="#F88C8A8A"
                 android:textSize="17sp"
                 android:textStyle="bold"

                 />-->



            <Button
                android:id="@+id/btnEditCourse"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAdminViewCourseName"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_background_blue"
                android:shadowColor="@color/black"
                android:text="Edit Course"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/ivAdminViewCourseDelete"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@id/btnEditCourse"
                android:layout_below="@+id/tvAdminViewCourseName"
                android:src="@drawable/ic_baseline_delete_24" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>