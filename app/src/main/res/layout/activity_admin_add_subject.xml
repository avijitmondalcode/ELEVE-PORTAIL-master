<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.AdminAddSubject">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="#141842">

        <TextView
            android:layout_width="280dp"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"

            android:fontFamily="@font/averia_gruesa_libre"
            android:padding="15dp"
            android:text="Add\nSubject"
            android:textColor="#FBFBFB"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/subject" />
    </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="200dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardApproveFacult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#00000000"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="318dp"
                    android:background="@drawable/background_bottom"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="370dp"
                        android:layout_alignParentLeft="true"

                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgAdminAddSubject"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="70dp"
                            android:src="@drawable/subject"

                            />

                        <TextView
                            android:id="@+id/tvAdminSubjectName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/mo_me"
                            android:text="Subject"
                            android:textColor="#ffffff"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/cardbg6"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        >

                        <Spinner
                            android:id="@+id/spinAdminSubjectCourse"
                            style="@style/Widget.AppCompat.DropDownItem.Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp" />

                        <Spinner
                            android:id="@+id/spinAdminSubjectDept"
                            style="@style/Widget.AppCompat.DropDownItem.Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"

                            />

                        <Spinner
                            android:id="@+id/spinAdminSubjectSem"
                            style="@style/Widget.AppCompat.DropDownItem.Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"

                            />

                        <EditText
                            android:id="@+id/etAdminSubjectName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Enter Subject Name" />

                        <Button
                            android:id="@+id/btnAdminAddSubject"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="40dp"
                            android:background="@drawable/round_bk6"
                            android:fontFamily="@font/averia_gruesa_libre"
                            android:text="Add Subject"
                            android:textColor="#ffffff"


                            />
                    </LinearLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>


</RelativeLayout>