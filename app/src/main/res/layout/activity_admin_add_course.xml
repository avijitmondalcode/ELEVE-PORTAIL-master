<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.AdminAddCourse">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="@drawable/round_bk2">

        <TextView
            android:layout_width="280dp"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"

            android:fontFamily="@font/averia_gruesa_libre"
            android:padding="15dp"
            android:text="Add\nCourse"
            android:textColor="#006064"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"

            android:src="@drawable/course2" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="190dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardApproveFacult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="100dp"
                app:cardBackgroundColor="#00000000"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_gravity="center"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:background="@drawable/approve_bg2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgAdminAddSubject"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="70dp"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/course"

                            />

                        <TextView
                            android:id="@+id/tvAdminSubjectName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/mo_me"
                            android:text="Course"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/cardbg6"
                        android:orientation="vertical"
                        android:gravity="center"
                        >



                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Enter Course Name"
                            android:id="@+id/etAdminCourseName"
                            android:gravity="center"
                            android:layout_margin="20dp"
                            />

                        <Button
                            android:id="@+id/btnAdminAddCourse"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="40dp"
                            android:background="@drawable/round_bk6"
                            android:fontFamily="@font/averia_gruesa_libre"
                            android:text="Add\nCourse"
                            android:textColor="#ffffff"


                            />
                    </LinearLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>


    </ScrollView>
</RelativeLayout>