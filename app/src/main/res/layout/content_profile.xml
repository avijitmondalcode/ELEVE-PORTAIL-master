<?xml version="1.0" encoding="utf-8"?>
    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ProfileSetup"
        tools:showIn="@layout/activity_profile_setup"
        android:background="@drawable/profile_bk"

        >
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"

        android:layout_marginLeft="10dp"

        android:layout_marginRight="10dp"

        android:background="@drawable/cardbg6"

        app:cardCornerRadius="20dp"

        app:cardElevation="3dp"

        >
    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                >


                        <TextView
                            style="@style/headerText"
                            android:layout_marginBottom="0dp"
                            android:text="Account Info" />

                        <RelativeLayout style="@style/profileDetailsLayout">
                    <ImageView
                        android:id="@+id/nameImageView"
                        android:src="@drawable/avatar4"
                        style="@style/profileDetailsImage" />

                    <TextView
                        android:id="@+id/nameTextView"
                        android:text="Name"
                        android:layout_toRightOf="@id/nameImageView"
                    style="@style/profileDetailsTextMain" />

                    <TextView
                        android:text="Avijit Mondal"
                        android:layout_toRightOf="@id/nameImageView"
                        style="@style/profileDetailsMiniText" />

                </RelativeLayout>

                <View style="@style/proifleDetailsView" />
                <RelativeLayout style="@style/profileDetailsLayout">
                    <ImageView
                        android:id="@+id/mobileImageView"
                        android:src="@drawable/mobile"
                        style="@style/profileDetailsImage" />

                    <TextView
                        style="@style/profileDetailsTextMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/mobileImageView"
                        android:text="Mobile" />

                    <TextView
                        android:text="+91-9876543210"
                        android:layout_toRightOf="@id/mobileImageView"
                        style="@style/profileDetailsMiniText" />

                </RelativeLayout>

                <View style="@style/proifleDetailsView" />
                <RelativeLayout style="@style/profileDetailsLayout">
                    <ImageView
                        android:id="@+id/emailImageView"
                        android:src="@drawable/mail"
                        style="@style/profileDetailsImage" />

                    <TextView
                        android:text="Email"
                        android:layout_toRightOf="@id/emailImageView"
                        style="@style/profileDetailsTextMain" />

                    <TextView
                        android:text="neta@gmail.com"
                        android:layout_toRightOf="@id/emailImageView"
                        style="@style/profileDetailsMiniText" />

                </RelativeLayout>

                <View style="@style/proifleDetailsView" />
                <RelativeLayout style="@style/profileDetailsLayout">
                    <ImageView
                        android:id="@+id/dobImageView"
                        android:src="@drawable/dob"
                        style="@style/profileDetailsImage" />

                    <TextView
                        android:text="D.O.B"
                        android:layout_toRightOf="@id/dobImageView"
                        style="@style/profileDetailsTextMain" />

                    <TextView
                        android:text="12-05-1990"
                        android:layout_toRightOf="@id/dobImageView"
                        style="@style/profileDetailsMiniText" />

                </RelativeLayout>

                <View style="@style/proifleDetailsView" />
                <RelativeLayout style="@style/profileDetailsLayout">
                    <ImageView
                        android:id="@+id/ivStudentDetailsGender"
                        android:src="@drawable/gender"
                        style="@style/profileDetailsImage" />

                    <TextView
                        android:text="Gender"
                        android:layout_toRightOf="@id/ivStudentDetailsGender"
                        style="@style/profileDetailsTextMain" />

                    <TextView
                        android:text="Male"
                        android:layout_toRightOf="@id/ivStudentDetailsGender"
                        style="@style/profileDetailsMiniText" />

                </RelativeLayout>

                <View style="@style/proifleDetailsView" />
                <RelativeLayout style="@style/profileDetailsLayout">
                    <ImageView
                        android:id="@+id/addressImageView"
                        android:src="@drawable/address"
                        style="@style/profileDetailsImage" />

                    <TextView
                        android:text="Address"
                        android:layout_toRightOf="@id/addressImageView"
                        style="@style/profileDetailsTextMain" />

                    <TextView
                        android:text="Avenue 2nd Street NW SY."
                        android:layout_toRightOf="@id/addressImageView"
                        style="@style/profileDetailsMiniText" />

                </RelativeLayout>

                <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/ivCourse"
                android:src="@drawable/course"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="Course"
                android:layout_toRightOf="@id/ivCourse"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:text="Technology"
                android:layout_toRightOf="@id/ivCourse"
                style="@style/profileDetailsMiniText" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/ivDepartment"
                android:src="@drawable/deepartment"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="Department"
                android:layout_toRightOf="@id/ivDepartment"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:text="BCA"
                android:layout_toRightOf="@id/ivDepartment"
                style="@style/profileDetailsMiniText" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/ivRegistrationNo"
                android:src="@drawable/regno"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="Registration No"
                android:layout_toRightOf="@id/ivRegistrationNo"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:text="A234567890"
                android:layout_toRightOf="@id/ivRegistrationNo"
                style="@style/profileDetailsMiniText" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/ivRollNo"
                android:src="@drawable/roll"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="Roll No."
                android:layout_toRightOf="@id/ivRollNo"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:text="BC12345678"
                android:layout_toRightOf="@id/ivRollNo"
                style="@style/profileDetailsMiniText" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />
    </LinearLayout>


</androidx.cardview.widget.CardView>

    </androidx.core.widget.NestedScrollView>
