<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:id="@+id/main_blog_post"
        android:layout_gravity="center"
        app:cardBackgroundColor="#FBC53F"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvFacultyMaterialName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Material Name"
                android:textSize="20sp"
                android:fontFamily="@font/averia_gruesa_libre"
                android:textColor="#fff"
                android:textStyle="bold"
                />



            <TextView
                android:id="@+id/tvFacultyCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="23dp"
                android:text="Course"
                android:textSize="18sp"
                android:fontFamily="@font/amarante"
                android:textColor="#303F9F"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tvFacultyDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="23dp"
                android:text="Department"
                android:textSize="18sp"
                android:fontFamily="@font/averia_gruesa_libre"
                android:textColor="#303F9F"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tvFacultyDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="23dp"
                android:text="Description"
                android:textSize="13sp"
                android:fontFamily="@font/averia_gruesa_libre"
                android:textColor="#303F9F"
                android:textStyle="bold"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <Button
                    android:id="@+id/btViewMaterial"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="#fff"
                    android:fontFamily="@font/baloo"
                    android:layout_gravity="center"
                    android:text="View Material"
                    android:textColor="#1D255A" />

                <ImageView
                    android:id="@+id/ivMaterialDelete"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:layout_marginLeft="38dp"
                    android:layout_toRightOf="@+id/btViewMaterial"
                    android:src="@drawable/ic_baseline_delete_24" />

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>