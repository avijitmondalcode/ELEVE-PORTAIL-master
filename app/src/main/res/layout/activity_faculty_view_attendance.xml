<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".faculty.FacultyViewAttendance">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >

        <TextView
            android:id="@+id/tvAttendanceHeader"
            android:layout_width="match_parent"
            android:padding="30dp"
            android:layout_height="wrap_content"
            android:background="#232D70"
            android:fontFamily="@font/averia_gruesa_libre"
            android:text="Header"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:textStyle="bold"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Present"
                android:textSize="17sp"
                android:textStyle="bold"

                android:textColor="#388E3C" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="20dp"
                android:text="Absent"
                android:textColor="#D32F2F"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >


            <TextView
                android:id="@+id/tvAttendancePresent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Present"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#388E3C" />

            <TextView
                android:id="@+id/tvAttendanceAbsent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:text="Absent"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#D32F2F" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Present "
            android:layout_gravity="center"
            android:textStyle="italic"
            android:textSize="20sp"
            android:textColor="#388E3C"
            android:layout_margin="10dp"
android:fontFamily="@font/baloo"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerPresent"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="Absent"
            android:textSize="20sp"
            android:textColor="#D32F2F"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:textStyle="italic"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerAbsent"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>