<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"

    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"

    android:background="@drawable/cardbg9"

    tools:context=".Register"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/register"
            android:layout_width="209dp"
            android:layout_height="129dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/logo"
            android:fontFamily="@font/averia_gruesa_libre"
            android:gravity="center"
            android:text="Complete\nProfile Details"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.151"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/logo" />
    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:orientation="vertical">



        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"

            android:layout_height="450dp"

            android:layout_margin="20dp"

            android:background="@drawable/cardbg6"

            app:cardCornerRadius="40dp"

            app:cardElevation="8dp">



            <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"

                android:layout_marginTop="1dp"

                android:gravity="center_vertical"

                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView

                    android:layout_width="80dp"

                    android:id="@+id/cirUserProf"
android:layout_marginTop="5dp"
                    android:layout_height="80dp"

                    android:layout_gravity="center"

                    android:src="@drawable/avatar"/>


                <EditText

                    android:id="@+id/editTextName"

                    style="@style/modifiedEditText"

                    android:layout_marginTop="10dp"

                    android:fontFamily="@font/averia_gruesa_libre"

                    android:hint="Enter Name"

                    android:inputType="textPersonName"

                    android:maxLines="1" />



                <EditText

                    android:id="@+id/editTextMobile"

                    style="@style/modifiedEditText"

                    android:layout_marginTop="20dp"

                    android:fontFamily="@font/averia_gruesa_libre"

                    android:hint="@string/login_mobile_number_hint"

                    android:inputType="phone"

                    android:maxLines="1" />



                <EditText

                    android:id="@+id/editTextDOB"

                    style="@style/modifiedEditText"

                    android:fontFamily="@font/averia_gruesa_libre"

                    android:layout_marginTop="20dp"

                    android:drawableRight="@drawable/ic_baseline_calendar_today_24"

                    android:hint="Date of Birth"

                    android:inputType="date"

                    android:maxLines="1" />



                <LinearLayout

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:layout_marginTop="20dp"

                    android:fontFamily="@font/averia_gruesa_libre"

                    android:orientation="horizontal">



                    <TextView

                        style="@style/modifiedEditText"

                        android:layout_width="wrap_content"

                        android:fontFamily="@font/averia_gruesa_libre"

                        android:layout_height="wrap_content"

                        android:text="Gender" />





                    <Spinner

                        android:id="@+id/gender"

                        style="@style/modifiedEditText"

                        android:layout_width="wrap_content"

                        android:fontFamily="@font/averia_gruesa_libre"

                        android:layout_height="wrap_content"

                        android:autofillHints="Gender" />

                </LinearLayout>



                <EditText

                    android:id="@+id/editTextAddress"

                    style="@style/modifiedEditText"

                    android:fontFamily="@font/averia_gruesa_libre"

                    android:layout_marginTop="20dp"

                    android:hint="Address"

                    android:inputType="textMultiLine" />



                <LinearLayout

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:layout_marginTop="20dp"

                    android:orientation="horizontal">



                    <TextView

                        style="@style/modifiedEditText"

                        android:layout_width="wrap_content"

                        android:fontFamily="@font/averia_gruesa_libre"

                        android:layout_height="wrap_content"

                        android:text="Department" />





                    <Spinner

                        android:id="@+id/department"

                        style="@style/modifiedEditText"

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:fontFamily="@font/averia_gruesa_libre"

                        android:autofillHints="Gender" />

                </LinearLayout>



                <LinearLayout

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"

                    android:orientation="horizontal">



                    <TextView

                        style="@style/modifiedEditText"

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:fontFamily="@font/averia_gruesa_libre"

                        android:text="Course" />





                    <Spinner

                        android:id="@+id/course"

                        style="@style/modifiedEditText"

                        android:fontFamily="@font/averia_gruesa_libre"

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:autofillHints="Gender" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_marginBottom="20dp"

        >

        <Button

            android:id="@+id/submitButton"
            android:background="@drawable/login_button_bk2"
            android:text="Submit"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textColor="#ffffff"
            android:layout_height="50dp"
            android:layout_width="140dp"
            android:layout_gravity="center"
            android:shadowColor="@color/black"
            />
    </RelativeLayout>



</LinearLayout>