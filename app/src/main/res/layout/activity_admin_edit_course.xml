<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_height="match_parent"
    tools:context=".admin.AdminEditCourse"
    android:background="@drawable/cardbg6"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:id="@+id/main_blog_post"
        android:layout_gravity="center_horizontal"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:background="@drawable/cardbg8"
            android:gravity="center"
            >

            <EditText
                android:id="@+id/etAdminEditCourseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Name"
                android:textStyle="italic"
                android:fontFamily="@font/aclonica"
                android:textSize="20sp" />




            <Button
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:id="@+id/btnAdminCourseUpdate"
                android:background="@drawable/login_button_bk2"
                android:text="Update"
                android:textColor="#ffffff"
                android:textStyle="bold"
                />



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>