<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="55dp"
        app:cardBackgroundColor="@color/black"
        android:id="@+id/main_blog_post"
        android:layout_gravity="center"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#EDDBDB"
            >

            <TextView
                android:id="@+id/tvFacultyPdfName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/averia_gruesa_libre"
                android:text="Pdf Name"
                android:textColor="#0F132E"
                android:textSize="30sp"

                />

            <TextView
                android:id="@+id/tvFacultyCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="23dp"
                android:text="Course"
                android:fontFamily="@font/mo_re"
                android:textStyle="bold"
                android:textColor="#303F9F"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvFacultyDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="23dp"
                android:text="Department"
                android:fontFamily="@font/mo_re"
                android:textStyle="bold"
                android:textColor="#303F9F"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvFacultyDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="23dp"
                android:text="Description"
                android:fontFamily="@font/mo_re"
                android:textStyle="bold"
                android:textColor="#303F9F"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_margin="12dp">

                <Button
                    android:id="@+id/btnFacultyViewNotice"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_background_blue"
                    android:padding="15dp"
                    android:text="View notice"
                    android:textColor="#ffffff"


                    />

                <Button
                    android:id="@+id/btnFacultyApproveNotice"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/btnFacultyViewNotice"
                    android:background="@drawable/button_2"
                    android:padding="15dp"
                    android:text="Approve \n notice"
                    android:textColor="#ffffff"


                    />

                <ImageView
                    android:id="@+id/ivFacultyNoticeDelete"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="12dp"
                    android:layout_toEndOf="@+id/btnFacultyApproveNotice"
                    android:src="@drawable/ic_baseline_delete_24" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>