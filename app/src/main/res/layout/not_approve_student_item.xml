<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_height="270dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardBackgroundColor="#00000000"
        android:layout_margin="10dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/main_blog_post"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_bk2"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvNAStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/averia_gruesa_libre"
                android:text="Student Name"
                android:textColor="#000000"
                android:layout_marginTop="10dp"

                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvNAStudentEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="73dp"
                android:fontFamily="@font/mo_me"
                android:text="Email Id"
                android:textColor="#F88C8A8A"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnNAStudent"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_background_blue"
                android:text="Approve Student"
                android:textColor="#ffffff"
                android:shadowColor="@color/black"
                />

            <ImageView
                android:id="@+id/ivNAStudentDelete"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginLeft="-4dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@id/btnNAStudent"
                android:src="@drawable/ic_baseline_delete_24"
                android:layout_alignParentEnd="true"
                />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>