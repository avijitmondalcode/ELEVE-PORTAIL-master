<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"

    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"

    android:background="@drawable/background_image_one_signup"

    tools:context=".Register"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/register"
            android:layout_width="209dp"
            android:layout_height="129dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/logo"
            android:fontFamily="@font/averia_gruesa_libre"
            android:gravity="center"
            android:text="Complete\nProfile Details"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.151"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/logo" />
    </RelativeLayout>



    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:orientation="vertical">



        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"

            android:layout_marginLeft="10dp"

            android:layout_marginRight="10dp"

            android:background="@drawable/cardbg6"

            app:cardCornerRadius="80dp"

            app:cardElevation="3dp"

            >



            <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"

                android:layout_marginTop="25dp"

                android:gravity="center_vertical"

                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView

                    android:id="@+id/imgFacultyProfile2"

                    android:layout_width="100dp"

                    android:layout_height="100dp"

                    android:layout_gravity="center"

                    android:src="@drawable/teacher"
                    tools:ignore="InvalidId" />

                <EditText

                    android:id="@+id/editTextName"

                    style="@style/modifiedEditText"

                    android:layout_marginTop="10dp"

                    android:fontFamily="@font/averia_gruesa_libre"

                    android:hint="Enter Name"
                    android:backgroundTint="#DAD3D3"

                    android:inputType="textPersonName"

                    android:maxLines="1" />



                <EditText

                    android:id="@+id/editTextMobile"

                    style="@style/modifiedEditText"

                    android:layout_marginTop="20dp"

                    android:fontFamily="@font/averia_gruesa_libre"
                    android:backgroundTint="#DAD3D3"

                    android:hint="@string/login_mobile_number_hint"

                    android:inputType="phone"

                    android:maxLines="1" />



                <EditText

                    android:id="@+id/editTextDOB"

                    style="@style/modifiedEditText"
                    android:backgroundTint="#DAD3D3"

                    android:layout_marginTop="20dp"

                    android:drawableRight="@drawable/ic_baseline_calendar_today_24"

                    android:fontFamily="@font/averia_gruesa_libre"

                    android:hint="Date of Birth"

                    android:inputType="date"

                    android:maxLines="1" />



                <LinearLayout

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:layout_marginTop="20dp"
                    android:backgroundTint="#DAD3D3"

                    android:fontFamily="@font/averia_gruesa_libre"

                    android:orientation="horizontal"

                    >



                    <TextView

                        style="@style/modifiedEditText"

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:fontFamily="@font/averia_gruesa_libre"

                        android:text="Gender" />





                    <Spinner

                        android:id="@+id/gender"

                        style="@style/modifiedEditText"

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:autofillHints="Gender"

                        android:fontFamily="@font/averia_gruesa_libre" />

                </LinearLayout>



                <EditText

                    android:id="@+id/editTextAddress"

                    style="@style/modifiedEditText"

                    android:layout_marginTop="20dp"

                    android:fontFamily="@font/averia_gruesa_libre"

                    android:hint="Address"

                    android:inputType="textMultiLine"
                    android:backgroundTint="#DAD3D3"

                    />

                <Button

                    android:id="@+id/submitButton"
                    android:background="@drawable/button_background_blue"
                    android:text="Submit"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#ffffff"
                    android:layout_height="40dp"
                    android:layout_width="140dp"
                    android:layout_margin="20dp"
                    android:layout_gravity="center"
                    />




            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_marginBottom="20dp"

        >


    </RelativeLayout>



</LinearLayout>