<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".admin.AdminViewProfileDetails"

    >
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"

        android:layout_marginLeft="10dp"

        android:layout_marginRight="10dp"

        android:background="@drawable/cardbg6"

        app:cardCornerRadius="20dp"

        app:cardElevation="3dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Admin Account Info"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:textSize="30sp"
                android:fontFamily="@font/averia_gruesa_libre"
                android:layout_marginBottom="20dp"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/avatar4"
                android:layout_gravity="center"
                android:id="@+id/imgAdminViewProfilePic"
                />




            <RelativeLayout style="@style/profileDetailsLayout">
                <ImageView
                    android:id="@+id/imgAdmin"
                    android:src="@drawable/avatar4"
                    style="@style/profileDetailsImage"

                    />

                <TextView
                    android:id="@+id/nameTextView"
                    android:text="Name"
                    android:layout_toRightOf="@id/imgAdmin"
                    style="@style/profileDetailsTextMain" />

                <TextView
                    android:text="Avijit Mondal"
                    android:layout_toRightOf="@id/imgAdmin"
                    style="@style/profileDetailsMiniText"
                    android:id="@+id/tvAdminViewName"


                    />

            </RelativeLayout>

            <View style="@style/proifleDetailsView" />
            <RelativeLayout style="@style/profileDetailsLayout">
                <ImageView
                    android:id="@+id/mobileImageView"
                    android:src="@drawable/mobile"
                    style="@style/profileDetailsImage" />

                <TextView
                    style="@style/profileDetailsTextMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/mobileImageView"
                    android:text="Mobile" />

                <TextView
                    android:id="@+id/tvAdminViewPhone"
                    android:text="+91-9876543210"
                    android:layout_toRightOf="@id/mobileImageView"
                    style="@style/profileDetailsMiniText" />

            </RelativeLayout>

            <View style="@style/proifleDetailsView" />
            <RelativeLayout style="@style/profileDetailsLayout">
                <ImageView
                    android:id="@+id/emailImageView"
                    android:src="@drawable/mail"
                    style="@style/profileDetailsImage" />

                <TextView
                    android:text="Email"
                    android:layout_toRightOf="@id/emailImageView"
                    style="@style/profileDetailsTextMain" />

                <TextView
                    android:id="@+id/tvAdminViewEmail"
                    android:text="neta@gmail.com"
                    android:layout_toRightOf="@id/emailImageView"
                    style="@style/profileDetailsMiniText" />

            </RelativeLayout>

            <View style="@style/proifleDetailsView" />
            <RelativeLayout style="@style/profileDetailsLayout">
                <ImageView
                    android:id="@+id/dobImageView"
                    android:src="@drawable/dob"
                    style="@style/profileDetailsImage" />

                <TextView
                    android:text="D.O.B"
                    android:layout_toRightOf="@id/dobImageView"
                    style="@style/profileDetailsTextMain" />

                <TextView
                    android:id="@+id/tvAdminViewDOB"
                    android:text="12-05-1990"
                    android:layout_toRightOf="@id/dobImageView"
                    style="@style/profileDetailsMiniText" />

            </RelativeLayout>

            <View style="@style/proifleDetailsView" />
            <RelativeLayout style="@style/profileDetailsLayout">
                <ImageView
                    android:id="@+id/ivStudentDetailsGender"
                    android:src="@drawable/gender"
                    style="@style/profileDetailsImage" />

                <TextView
                    android:text="Gender"
                    android:layout_toRightOf="@id/ivStudentDetailsGender"
                    style="@style/profileDetailsTextMain" />

                <TextView
                    android:id="@+id/tvAdminViewGender"
                    android:text="Male"
                    android:layout_toRightOf="@id/ivStudentDetailsGender"
                    style="@style/profileDetailsMiniText" />

            </RelativeLayout>

            <View style="@style/proifleDetailsView" />
            <RelativeLayout style="@style/profileDetailsLayout">
                <ImageView
                    android:id="@+id/addressImageView"
                    android:src="@drawable/address"
                    style="@style/profileDetailsImage" />

                <TextView
                    android:text="Address"
                    android:layout_toRightOf="@id/addressImageView"
                    style="@style/profileDetailsTextMain" />

                <TextView
                    android:id="@+id/tvAdminViewAddress"
                    android:text="Avenue 2nd Street NW SY."
                    android:layout_toRightOf="@id/addressImageView"
                    style="@style/profileDetailsMiniText" />

            </RelativeLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.core.widget.NestedScrollView>